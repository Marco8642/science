<script>
  // GitHub raw URL for the script text
  const rawUrl = "https://raw.githubusercontent.com/Marco8642/science/main/highway%20legends%20script";

  const scriptContainer = document.getElementById("script-container");
  const copyBtn = document.getElementById("copy-btn");

  // Fetch script text from GitHub raw URL
  fetch(rawUrl)
    .then(response => {
      if (!response.ok) throw new Error("Failed to load script.");
      return response.text();
    })
    .then(text => {
      scriptContainer.textContent = text;
    })
    .catch(err => {
      scriptContainer.textContent = "Error loading script: " + err.message;
    });

  // Copy script text to clipboard
  copyBtn.addEventListener("click", () => {
    const text = scriptContainer.textContent;
    if (!text) return;

    navigator.clipboard.writeText(text).then(() => {
      copyBtn.textContent = "Copied!";
      setTimeout(() => {
        copyBtn.textContent = "Copy Script";
      }, 2000);
    }).catch(() => {
      alert("Failed to copy script.");
    });
  });
</script>

